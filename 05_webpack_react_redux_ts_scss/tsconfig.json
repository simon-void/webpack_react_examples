{
    "compilerOptions": {
      "outDir": "./dist/",
      "moduleResolution": "node",
      "sourceMap": true,
      "module": "es6",
      "target": "es2017",
      "jsx": "react",
      "allowJs": true,
      "noEmitOnError": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
    },
    "exclude": [
      "node_modules",
      "dist"
    ],
    "include": [
        "./src/**/*"
    ]
}
  